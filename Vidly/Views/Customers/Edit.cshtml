@model Vidly.ViewModels.CustomerFormViewModel

@{
    ViewBag.Title = "Edit or Add Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save", "Customers"))
{
    <div class="form-group">

        @Html.LabelFor(c => c.Customer.Name)
        @Html.TextBoxFor(c => c.Customer.Name, new { @class = "form-control" })

    </div>
    <div class="form-group">

        @Html.LabelFor(c => c.Customer.Dob)
        @Html.TextBoxFor(c => c.Customer.Dob, "{0:MMM d yyyy}", new { @class = "form-control" })

    </div>
    <div class="form-group">

        @Html.LabelFor(c => c.Customer.MembershipTypeId)
        @Html.DropDownListFor(c => c.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership Type", new { @class = "form-control" })

    </div>
    <!-- Especial condition for the checkboxes: -->
    <div class="checkbox">

        <label>
            @Html.CheckBoxFor(c => c.Customer.IsSubscribedToNewsletter) Subscribe to newsletter?
        </label>

    </div>

    @Html.HiddenFor(c => c.Customer.Id)
    <button type="submit" class="btn btn-primary btn-sm">Save</button>
    @Html.ActionLink("Back to List", "Index", "Customer", new { @class = "btn btn-primary btn-sm" })
}