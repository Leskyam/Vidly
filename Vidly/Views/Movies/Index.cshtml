@model List<Vidly.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>


@if (Model.Count == 0)
{
    <text>No movies so far!</text>
}
else
{
    <table class="table table-hover">
        <tr><th>Movie</th></tr>
        @foreach (var movie in Model)
        {
            <tr><td>@movie.Name</td></tr>
        }

    </table>
}




